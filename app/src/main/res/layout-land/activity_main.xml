<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".add_themes"
    xmlns:tools="http://schemas.android.com/tools">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Button"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdcsd" />


        <EditText
            android:id="@+id/dssd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="salam"
            android:textSize="8sp"
            android:background="#FFEB3B"
            android:padding="6dp"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radios" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sdcsd"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dssd">

            <EditText
                android:id="@+id/textsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="enter your text"
                android:visibility="gone" />

            <EditText
                android:id="@+id/textdigtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:visibility="gone" />

            <Button
                android:id="@+id/startatt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="start"
                android:visibility="gone" />


        </LinearLayout>


        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#FF0000" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#000000" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#005EFF" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#03A9F4" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#773400" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#009A19" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#787878" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#FF6F00" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#FF85AE" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#673AB7" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#FFCF41" />

            <RadioButton
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:buttonTint="#DFDFDF" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioscaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dssd">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple"
                android:textColor="#000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modern"
                android:textColor="#000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Illust"
                android:textColor="#000" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Added Themes: "
                android:textColor="#000"
                android:textSize="18sp"
                android:visibility="gone" />

        </RadioGroup>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="184dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dssd"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="184dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/dssd"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="184dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@+id/dssd"
            tools:srcCompat="@tools:sample/avatars" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:selectAllOnFocus="true"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="12sp" />

    </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>