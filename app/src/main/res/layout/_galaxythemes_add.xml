<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".galaxythemes_add">

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#FF0000" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#000000" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#005EFF" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#03A9F4" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#773400" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#009A19" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#787878" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#FF6F00" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#FF85AE" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#673AB7" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#FFCF41" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:buttonTint="#DFDFDF" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Galaxy Themes"
        android:textColor="#FF5722"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#CDDC39"
        android:hint="theme link"
        android:inputType="textShortMessage"
        android:maxLines="1"
        android:padding="6dp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radios" />
    <EditText
        android:id="@+id/screenshots_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:background="#CDDC39"
        android:hint="screenshots"
        android:textColor="#000"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screenshots_id">

        <TextView
            android:id="@+id/jsonviewtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textIsSelectable="true"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_color" />

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>